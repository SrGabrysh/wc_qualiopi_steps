{
  "name": "tb-web/wc_qualiopi_steps",
  "description": "WC Qualiopi Steps est un plugin WooCommerce qui impose un test de positionnement (Qualiopi) avant paiement. Mapping produit→page de test via page d'options, jeton HMAC + session, garde checkout, logs d'audit et page fallback. Développement step-by-step, SRP, UX accessible.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "pestphp/pest": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "WcQualiopiSteps\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WcQualiopiSteps\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "cs:lint": "phpcs --standard=phpcs.xml.dist --extensions=php,inc src",
    "cs:fix": "phpcbf --standard=phpcs.xml.dist --extensions=php,inc src",
    "build": "composer dump-autoload -o --no-dev",
    "test": "pest",
    "test:watch": "pest --watch",
    "test:coverage": "pest --coverage --min=70",
    "test:unit": "pest tests/Unit",
    "test:integration": "pest tests/Integration",
    "test:e2e": "python tests/E2E/framework_e2e.py"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "pestphp/pest-plugin": true
    }
  }
}
